<% unless cart.line_items.empty? %>
<h3>Your Cart</h3>
<style>


#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 80%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>



<table id="customers">

	<tr>
		<th>Quanitity</th>
		<th>product</th>
		<th>Amount</th>
		
	</tr>
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price)  %></td>
	</tr>
</table></br>
<% session[:amount] = cart.total_price %> 
<%= button_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?' , :class=>"btn btn-success btn-sm"%>
<p></br>
	<div class="king3">
	<%= link_to "Continue Shopping",:controller=>"gallery",:action=>"index"%> </div>&nbsp&nbsp|&nbsp&nbsp 
	<% if user_signed_in? %><div class="king3">
	<%= link_to "Checkout" ,:controller=>"gallery",:action=>"checkout" %></div>
		<% else %><div class="king3">
		<%= link_to "Checkout",new_user_session_path,:controller=>"admin",:action=>"login" %></div>
		<% end %>
	</p>
<% end %>